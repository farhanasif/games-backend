<!DOCTYPE html>
<html>
<head>
<style>

#users {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

#users td, #users th {
  border: 1px solid #ddd;
  padding: 8px;
}

#users tr:nth-child(even){background-color: #f2f2f2;}

#users tr:hover {background-color: #ddd;}

#users th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #F16522;
  color: white;
}

.card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  width: 80%;
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.container {
   display: flex;
   justify-content: center;
   align-items: center;
}

</style>
</head>
<body>
    <div class="container">
        <h1>
            Leaderboard
        </h1>
    </div>
        <div class="container">
            <div class="card">
                <table id="users">
                    <tr>
                        <th style="width: 15px">Rank</th>
                        <th>Name</th>
                        <th>Score</th>
                    </tr>
                    <!-- <tr>
                        <td>Alfreds Futterkiste</td>
                        <td>Maria Anders</td>
                        <td>Germany</td>
                    </tr> -->
                    <% for(var i=0; i < leaders.length; i++) { %>
                        <tr>
                            <td><%= i+1 %></td>
                            <td><%= leaders[i].full_name %></td>
                            <td><%= leaders[i].score %></td>
                        </tr>
                    <% } %>
                    
                </table>
            </div>
        </div>
</body>
</html>